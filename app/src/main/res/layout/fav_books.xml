<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fav_books_holder"
        android:gravity="center_vertical"
        android:background="@color/lightGray"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_fav_books"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginTop="9dp"
            android:id="@+id/favBooksTitle"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more_books"
            android:id="@+id/moreBooks"
            android:layout_alignParentRight="true"
            android:background="@drawable/oval_border_shape"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/favBooksContainer"
        android:layout_width="match_parent"
        android:background="@color/lightGray"
        android:layout_height="match_parent"
        android:layout_below="@+id/fav_books_holder">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>
